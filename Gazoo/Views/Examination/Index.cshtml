        <script src="~/lib/angular-material/angular-material.min.js"></script>
        <script src="~/lib/angular-ui-select/select.min.js"></script>
    </environment>
}
<div class="examinations" ng-app="Company.gazoo.examination" ng-cloak>
    <div ng-controller="examinationModuleController">
        <toaster-container></toaster-container>
        <div ng-if="showNavigationBar()">
            <div class="col-md-2 col-sm-3 col-xs-12">
                <ul class="nav nav-pills nav-stacked">
                    <li ng-class="{'active':$state.current.name.indexOf('examinations') != -1}" required-claim="ExamMaster">
                        <a ui-sref="examinations">{{ 'EXAMINATIONS_COMPONENT_TAB' | translate}}</a>
                    </li>
                    <li ng-class="{'active':$state.current.name.indexOf('audioFilesComponent') != -1}" required-claim="ExamMaster">
                        <a ui-sref="audioFilesComponent.audioFileList">{{ 'AUDIO_FILES_COMPONENT_TAB' | translate}}</a>
                    </li>
                    <li ng-class="{'active':$state.current.name.indexOf('answerSetsComponent') != -1}" required-claim="ExamMaster">
                        <a ui-sref="answerSetsComponent">{{ 'ANSWERS_COMPONENT_TAB' | translate}}</a>
                    </li>
                    <li ng-class="{'active':$state.current.name.indexOf('reports') != -1}">
                        <a ui-sref="reports">{{ 'REPORTS_COMPONENT_TAB' | translate}}</a>
                    </li>
                    <li ng-class="{'active':$state.current.name === 'statistics'}">
                        <a ui-sref="statistics">{{ 'STATISTICS_COMPONENT_TAB' | translate}}</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-10 col-sm-9 col-xs-12 tab-content">
                <ui-view></ui-view>
            </div>
        </div>
        <div ng-if="!showNavigationBar()">
            <div class="col-xs-12 tab-content">
                <ui-view></ui-view>
            </div>
        </div>
    </div>
</div>