    <environment names="Staging,Production">
        <script src="~/lib/recordrtc/RecordRTC.min.js"></script>
        <script src="~/lib/wavesurfer.js/wavesurfer.min.js"></script>
        <script src="~/lib/angular-timer/angular-timer.min.js"></script>
