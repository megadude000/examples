        <script src="~/js/examination/components/Company.gazoo.examination.audio.uploader.component.js"></script>
        <script src="~/js/examination/components/Company.gazoo.examination.details.components.js"></script>
        <script src="~/js/examination/components/Company.gazoo.examination.list.component.js"></script>
        <script src="~/js/examination/components/Company.gazoo.examination.asnwer.sets.component.js"></script>
        <script src="~/js/examination/components/Company.gazoo.examination.report.details.component.js"></script>
        <script src="~/js/examination/components/Company.gazoo.examination.reports.component.js"></script>
        <script src="~/js/examination/components/Company.gazoo.examination.statistics.component.js"></script>

        <script src="~/js/examination/directives/Company.gazoo.examination.answer.control.directive.js"></script>

        <script src="~/js/examination/services/Company.gazoo.examination.audio.share.data.servise.js"></script>
        <script src="~/js/examination/services/http-services/Company.gazoo.examination.http.service.js"></script>
