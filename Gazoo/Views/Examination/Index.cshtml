        <script src="~/lib/angular-material/angular-material.js"></script>
        <script src="~/lib/angular-ui-select/select.js"></script>

        <script src="~/js/examination/controllers/Company.gazoo.examination.module.controller.js"></script>
        <script src="~/js/examination/controllers/Company.gazoo.examination.audio.files.controller.js"></script>
        <script src="~/js/examination/controllers/Company.gazoo.examination.modal.controller.js"></script>
        <script src="~/js/examination/controllers/Company.gazoo.examination.audio.file.modal.controller.js"></script>
